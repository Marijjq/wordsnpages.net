@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-outline-secondary bg-gradient nl-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Title">Product Title</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" type="text" disabled class="form-control border-0 shadow" > </textarea>
                    <label asp-for="Description" class="ms-2">Description</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2">ISBN</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2">Display Order</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2">Author</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2">List Price</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2">Price</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2">Price50</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2">Price100</label>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <button type="submit" disabled class="btn btn-danger">Delete</button>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">Go Back</a>
                    </div>
                </div>
        </form>
    </div>
</div>


