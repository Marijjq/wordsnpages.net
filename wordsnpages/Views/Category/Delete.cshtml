@model Category
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-outline-secondary bg-gradient nl-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
                <div class="row pb-2">
                    <h2 class="text-primary">Delete Category</h2>
                </div>
                <div class="mb-3">
                    <input asp-for="Name" type="text" disabled class="form-control border-0 shadow" />
                    <label class="ms-2">Category Name</label>
                </div>
                <div class="mb-3">
                    <input asp-for="DisplayOrder" type="text" disabled class="form-control border-0 shadow" />
                    <label class="ms-2">Display Order</label>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Go Back</a>
                    </div>
                </div>
        </form>
    </div>
</div>


